@model IEnumerable<HotelsApp.Models.Reservation>
@{
    ViewBag.Title = "ShowInfo";
}
@{
}
<h2>ShowInfo</h2>
<div>
    <div class="row">
        <table class="table table-striped">
            <tr>
                <th>name</th>
                <th>start</th>
                <th>end</th>
            </tr>

            <tbody>
            @{
                if (Model.First().Room == null)
                {
                }
                else
                {

                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Room.Title</td>
                            <td>@item.StartTime</td>
                            <td>@item.EndTime</td>

                            <td>@Html.ActionLink("Delete Reservation", "DeleteReservation", new {resId = item.Id})</td>
                        </tr>
                    }
                }
            }
            </tbody>
        </table>
        @Html.ActionLink("Add Reservation", "Reservation", new {id = Model.First().RoomId})
    </div>
    
</div>